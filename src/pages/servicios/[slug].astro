---
import type { GetStaticPaths } from "astro"
import Layout from "../../layouts/Layout.astro"
import SERVICIOS from "../../data/services"
import Container from "../../components/Container.astro"

export const getStaticPaths = (() => {
    const paths = SERVICIOS.map(({ id, title, image, actions }) => ({
        params: { slug: id },
        props: { title, image, actions },
    }))
    return paths
}) satisfies GetStaticPaths

const { title, image, actions } = Astro.props
---

<Layout>
    <div class="relative bg-slate-950">
        <img
            class="w-full aspect-video object-cover max-h-[80vh] opacity-80"
            src={image}
            alt=""
        />
        <h1
            class="text-white font-bold text-6xl absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2"
        >
            {title}
        </h1>
    </div>
    <div class="text-[#001c7d] py-18 bg-blue-100">
        <Container class:list={"space-y-6"}>
            <h2 class="text-3xl font-bold">Desarrollamos lo siguiente:</h2>
            <hr class="w-42 border-2" />
            <ul class="list-disc list-inside">
                {
                    actions.map((action) => (
                        <li class="text-xl font-semibold ">{action}</li>
                    ))
                }
            </ul>
        </Container>
    </div>
</Layout>
