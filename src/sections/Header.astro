---
import Container from "../components/Container.astro"
import ArrowDown from "../icons/arrow-down.svg"

//TODO: fix click toggle on desktop mode

const itemNavs = [
    {
        title: "INICIO",
        href: "/",
    },
    {
        title: "QUIÉNES SOMOS",
        href: "/about",
    },
    {
        title: "SERVICIOS",
        subItems: [
            {
                title: "CAPACITACIONES",
                href: "/capacitaciones",
            },
            {
                title: "CAPACITACIONES",
                href: "/capacitaciones",
            },
            {
                title: "CAPACITACIONES",
                href: "/capacitaciones",
            },
            {
                title: "CAPACITACIONES",
                href: "/capacitaciones",
            },
            // Agrega más subitems si es necesario
        ],
    },
    {
        title: "STAFF DE PROFESIONALES",
        href: "/staff-de-profesionales",
    },
    {
        title: "GALERÍA",
        href: "/galeria",
    },
    {
        title: "CONTACTO",
        href: "/contacto",
    },
]
---

<header class="w-full bg-white shadow-sm">
    <Container class:list={["pt-12 md:pb-0 pb-12"]}>
        <div
            class="flex flex-wrap justify-center md:justify-normal md:flex-nowrap items-center gap-12"
        >
            <div class="flex-shrink-0">
                <a href="/" class="block">
                    <img
                        src="/logo.webp"
                        alt="SSOMACAL Logo"
                        class="h-60 w-auto"
                    />
                </a>
            </div>

            <nav class="w-full flex flex-wrap justify-center space-x-8">
                {
                    itemNavs.map((item) => (
                        <div class="relative group">
                            {item.href ? (
                                <a
                                    href={item.href}
                                    class="flex text-gray-600 hover:text-blue-900 font-medium border-b-3 border-transparent hover:border-yellow-500 transition-all duration-300"
                                >
                                    {item.title}
                                </a>
                            ) : (
                                <button
                                    id="toggle"
                                    class="flex text-gray-600 hover:text-blue-900 font-medium border-b-3 border-transparent hover:border-yellow-500 transition-all duration-300"
                                >
                                    {item.title}
                                    {item.subItems && (
                                        <ArrowDown class="ml-1 w-4 h-4" />
                                    )}
                                </button>
                            )}

                            {item.subItems && (
                                <div
                                    id="toggleElement"
                                    class=" absolute z-50 hidden group-hover:block  bg-white shadow-md rounded-lg py-2 w-48"
                                >
                                    {item.subItems.map((subItem) => (
                                        <a
                                            href={subItem.href}
                                            class="block px-4 py-2 text-gray-600 hover:bg-gray-100"
                                        >
                                            {subItem.title}
                                        </a>
                                    ))}
                                </div>
                            )}
                        </div>
                    ))
                }
            </nav>
        </div>
    </Container>
</header>
<script>
    const btn = document.getElementById("toggle")
    const toggleElement = document.getElementById("toggleElement")
    btn?.addEventListener("click", () => {
        console.log("click")
        toggleElement?.classList.toggle("hidden")
    })
</script>

<style>
    .group:hover button {
        color: #1e3a8a; /* blue-900 */
    }
</style>
