---
import Container from "../components/Container.astro"

// Hero.astro
---

<section class="relative min-h-[600px] bg-slate-950">
    <div class="absolute inset-0 z-0">
        <img
            src="/hero-background.webp"
            alt="Fondo"
            class="w-full h-full object-cover opacity-40"
        />
    </div>

    <Container class="container mx-auto px-4 py-12 relative z-10">
        <!-- Cambia a grid-cols-3 -->
        <div class="grid md:grid-cols-3 gap-8 items-center">
            <!-- Contenido del lado izquierdo (ocupa 2/3) -->
            <div class="text-white space-y-6 md:col-span-2">
                <p class="text-sm font-semibold tracking-[0.25em]">
                    IMPLEMENTACIÓN DE NORMAS ISO
                </p>

                <h1 class="text-4xl md:text-5xl font-bold leading-tight text-pretty max-w-[32ch]">
                    Sistemas integrados de Gestión, Plan de Acciones Correctivas
                    y Preventivas. Levantamiento de Observaciones y Hallazgos.
                    Auditorias.
                </h1>

                <p class="text-lg">
                    Seguridad y Salud en el Trabajo Ley N°29783
                </p>

                <a
                    href="#"
                    class="inline-block px-8 py-3 border-2 border-white text-white hover:bg-white hover:text-gray-900 transition-colors"
                >
                    VER MÁS
                </a>
            </div>

            <!-- Formulario del lado derecho (ocupa 1/3) -->
            <div class="bg-yellow-500 p-8 rounded-2xl">
                <h2 class="text-2xl font-bold mb-6">SOLICITE INFORMACIÓN</h2>

                <form class="space-y-4">
                    <div>
                        <label for="nombre" class="block text-sm mb-1"
                            >Tu nombre y apellido</label
                        >
                        <input
                            type="text"
                            id="nombre"
                            name="nombre"
                            class="w-full p-2 border border-gray-300"
                            placeholder="Escriba sus datos"
                            required
                        />
                    </div>

                    <div>
                        <label for="email" class="block text-sm mb-1"
                            >Tu correo electrónico</label
                        >
                        <input
                            type="email"
                            id="email"
                            name="email"
                            class="w-full p-2 border border-gray-300"
                            placeholder="Escriba su email"
                            required
                        />
                    </div>

                    <div>
                        <label for="asunto" class="block text-sm mb-1"
                            >Asunto</label
                        >
                        <input
                            type="text"
                            id="asunto"
                            name="asunto"
                            class="w-full p-2 border border-gray-300"
                            placeholder="Escriba un resumen"
                            required
                        />
                    </div>

                    <div>
                        <label for="mensaje" class="block text-sm mb-1"
                            >Tu mensaje (opcional)</label
                        >
                        <textarea
                            id="mensaje"
                            name="mensaje"
                            rows="5"
                            class="w-full p-2 border border-gray-300"
                            placeholder="Escriba detalladamente su requerimiento"
                        ></textarea>
                    </div>

                    <div class="flex items-start gap-2">
                        <input
                            type="checkbox"
                            id="privacidad"
                            name="privacidad"
                            class="mt-1"
                            required
                        />
                        <label for="privacidad" class="text-sm">
                            Acepto la política de privacidad
                        </label>
                    </div>

                    <button
                        type="submit"
                        class="w-full bg-blue-600 text-white py-3 px-6 hover:bg-blue-700 transition-colors"
                    >
                        ENVIAR MENSAJE
                    </button>
                </form>
            </div>
        </div>
    </Container>
</section>

<style>
    input,
    textarea {
        background-color: white;
    }

  @keyframes slideInFromLeft {
    from {
      transform: translateX(-100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  .animate-slide-in-left {
    animation: slideInFromLeft 1s ease-in-out;
  }
+</style>
